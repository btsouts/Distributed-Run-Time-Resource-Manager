.br
     .
.br
     .
.br
     .
.br
.br
.BI  "  RCCE_init(&argc,"" &argv);"
.br
  RCCE_debug_set(RCCE_DEBUG_ALL);
.br
     .
.br
     .
.br
     .
.br
.br
